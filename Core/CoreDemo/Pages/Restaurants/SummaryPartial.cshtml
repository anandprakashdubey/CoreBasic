@using CoreDemo.Core
@model Restaurant

<div class="card card-default">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location : @Model.Location</span>
        <span>Cusine : @Model.Cusine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-lg"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            <i class="fas fa-window-maximize"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            <i class="fa fa-edit"></i>
        </a>
        <form method="post">
            <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
            <button type="submit" class="btn">
                <i class="fa fa-trash"></i>
            </button>
        </form>
    </div>
</div>

<style>
    .card-footer a{
    display: inline-flex;
    }
</style>