@page
@model CoreDemo.Pages.Restaurants.ListModel
@{
}

<h4>Restaurants -</h4>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input class="form-control" type="search" id="example-search-input" asp-for="SearchTerm">
            <span class="input-group-append">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>        
    </div>
</form>
<table class="table table-bordered">
    <tr>
        <td>Name</td>
        <td>Location</td>
        <td>Cusine</td>
        <td></td>
    </tr>
    @foreach (var item in Model.restaurantList)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Location</td>
            <td>@item.Cusine</td>
            <td>
                <a class="btn btn-lg"
                   asp-page="./Detail"
                   asp-route-restaurantId="@item.Id">
                    <i class="fa fa-edit"></i>
                </a>

            </td>
        </tr>
    }
</table>

